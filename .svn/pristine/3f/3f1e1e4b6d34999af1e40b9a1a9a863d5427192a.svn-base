<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">



    <TextView
        android:id="@+id/tv_intime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:text="in time"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_outtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_intime"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:text="out time"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/parkerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hoursSpent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="Parker Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hoursSpent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cost"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="total hours"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:layout_marginRight="30dp"
        android:gravity="right"
        android:text="RINGGIT"
        android:textSize="25sp" />


</RelativeLayout>