<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    >

    <Chronometer
        android:id="@+id/chrono_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tv_timeelapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chrono_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Time elapsed"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_startparking"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_timeelapsed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/img_startparking"
        android:layout_alignLeft="@id/img_startparking"
        android:layout_alignRight="@id/img_startparking"
        android:layout_alignTop="@id/img_startparking"
        android:gravity="center"
        android:text="Start Parking"
        android:textSize="20dp" />

</RelativeLayout>
