<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iVTicket"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ticket" />

        <TextView
            android:id="@+id/tv_intime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvDatePark"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat"
            android:text="in time"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_outtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_intime"
            android:layout_below="@+id/tv_intime"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="out time"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/parkerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvDatePark"
            android:fontFamily="@font/montserrat"
            android:text="Parker Name"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hoursSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parkerName"
            android:fontFamily="@font/montserrat"
            android:layout_centerHorizontal="true"
            android:text="total hours"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iVTicket"
            android:layout_alignRight="@id/iVTicket"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="105dp"
            android:fontFamily="@font/montserrat"
            android:text="10"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDatePark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_outtime"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="DATE"
            android:layout_marginTop="170dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>